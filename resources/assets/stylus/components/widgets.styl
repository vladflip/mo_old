.popular {
	.widget-content {
		.widget-post {
				.widget-data {
					.popular-data-title {
						cursor: pointer;
						color: #444;
						font-weight:bold;
						font-size:.825rem;
						
						&:hover {
							color: $blue;
						}
					}
					
					.popular-data-date {
					font-size: .6875rem;
					color: #aaa;
					text-transform: uppercase;
				}
				}
			}
	}
}

