.footer {
  	padding: 1.375rem 0;
	background-color:#343434 !important;
	margin-bottom: 35px;
	
	& > div {
		color: white;
		font-size: 1rem;
	}

	&-copyright {
		margin-left:30px;
		float: left;
	}
	
	&-share {
		float: right;
		
		& > span {
			padding: 7px 12px;
			background-color: #343434;
			cursor: pointer;
			&:hover {
				background-color: $blue;
			}
		}
	}
}