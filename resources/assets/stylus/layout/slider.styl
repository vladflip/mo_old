.slider {
	margin-bottom:35px;
	height: 371px;
	position:relative;
	@media (max-width: 700px) {
		height: 225px;
	}
	@media (min-width:700px) and (max-width:1100px) {
		height: 252px;
	}

	&-post {
		&>div {
			float:left;
		}

		&-image {
			width: 66%;
			
			&>img {
				height: 371px;
				width: 100%;
				
				@media(max-width: 700px) {
					height: 252px;
				}
				@media(min-width: 700px) and (max-width:1100px) {
					height: 252px;
				}
			}
			@media (max-width: 700px) {
				width: 100%;
			}
		}

		&-line {
			height:371px;
			width:3%;
			background-color: $blue;
			
			@media (max-width: 700px) {
				display: none;
			}
			
			@media (min-width:700px) and (max-width:1100px) {
				height: 252px;
			}
		}

		&-article {
			background-color: $grey;
			width: 31%;
			height: 371px;
			
			@media(min-width:700px) and (max-width:1100px) {
				height:252px;
			}
			
			&-header {
				padding:  20px 30px;
				&-headline {
					color: white !important;
					font-size: 1rem;
					font-weight: bold;
				}
			}
			
			&-main {
				height: 291px;
				padding: 0 30px;
				font-size: .875rem;
				@media (min-width:700px) and (max-width:1100px) {
					height: 152px;
				}
			}
			
			& div {
				color: #aaa;
			}
			

			@media (max-width: 700px) {
				display:none;
			}
		}
	}
	
	.owl-nav {
		&>div {
			background-color: #535353;
			height: 20px;
			width: 30px;
			color: white;
			padding:5px 0;
			text-align: center;
			position:absolute;
			cursor: pointer;
			font-size: 18px;
			font-weight: bold;
			
			@media(max-width:700px) {
				display: none !important;
			}
			
			&:hover {
				background-color: $blue;
			}
		}
		
		.owl-prev {
			bottom:0;
			right:30px;
		}
		.owl-next {
			bottom: 0;
			right: 0;
		}
	}
}